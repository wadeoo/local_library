extends layout 

block content 
    h1 副本ID: #{book_instance._id}
    p #[strong 书名]:&nbsp;#{book_instance.book.title}
    p #[strong Imprint]:&nbsp;#{book_instance.imprint} 

    if book_instance.status=='Available'
        p.text-success 状态:&nbsp; #{book_instance.status}
    else if book_instance.status=='Maintenance'
        p.text-danger 状态:&nbsp; #{book_instance.status}
    else 
        p.text-warning 状态:&nbsp; #{book_instance.status}

    p #[strong 还架日期]:&nbsp;#{book_instance.due_back_fomatted}
