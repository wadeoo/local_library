extends layout 

block content 
    h1=title

    form(method="POST" action='')
        div.form-group
            label(for='name') 书类:
            input#name.form-control(type='text',placeholder='奇幻, 诗歌......'
            ,name='name' value=(undefined===genre ?'':genre.name))
        button.btn.btn-primary(type='submit') 提交
    if errors         
        ul 
            each error in errors
                li!=error.msg
    
